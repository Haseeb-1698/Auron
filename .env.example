# Environment Configuration
NODE_ENV=development

# Frontend Configuration
VITE_API_URL=http://localhost:4000/api
VITE_WS_URL=ws://localhost:4000
VITE_APP_NAME=Auron Security Platform

# Backend Configuration
PORT=4000
API_PREFIX=/api
CORS_ORIGIN=http://localhost:5173

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auron_db
DB_USER=auron_user
DB_PASSWORD=your_secure_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Two-Factor Authentication
TWO_FACTOR_APP_NAME=Auron Platform

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Docker Container Management
DOCKER_HOST=unix:///var/run/docker.sock
CONTAINER_TIMEOUT=3600000
MAX_CONTAINERS_PER_USER=5

# LiquidMetal AI Configuration
LIQUIDMETAL_API_KEY=your_liquidmetal_api_key_here
LIQUIDMETAL_ENDPOINT=https://api.liquidmetal.ai/v1
CLAUDE_MODEL=claude-3-sonnet-20240229
SMART_MEMORY_ENABLED=true

# Email Configuration (for 2FA and notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@auron.example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=Auron Platform <noreply@auron.example.com>

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Logging
LOG_LEVEL=info
LOG_DIR=/app/logs

# Security Headers
HELMET_CSP_ENABLED=true

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Vultr Deployment
VULTR_API_KEY=your_vultr_api_key_here
VULTR_REGION=ewr

# WebRTC Configuration
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVER=
WEBRTC_TURN_USERNAME=
WEBRTC_TURN_PASSWORD=
