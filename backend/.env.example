# Server Configuration
NODE_ENV=development
PORT=4000
API_PREFIX=/api

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auron_db
DB_USER=auron_user
DB_PASSWORD=auron_secure_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Docker Configuration
DOCKER_HOST=/var/run/docker.sock
MAX_CONTAINERS_PER_USER=5

# Cloud Provider - Vultr
VULTR_API_KEY=your-vultr-api-key-here
VULTR_DEFAULT_REGION=ewr
VULTR_DEFAULT_PLAN=vc2-1c-1gb

# AI Service - LiquidMetal
LIQUIDMETAL_ENDPOINT=https://api.liquidmetal.ai/v1
LIQUIDMETAL_API_KEY=your-liquidmetal-api-key-here

# Application Settings
PUBLIC_HOST=localhost
LOG_LEVEL=info
LOG_DIR=./logs
