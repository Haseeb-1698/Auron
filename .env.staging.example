# Auron Staging Environment Configuration
# Copy this file to .env.staging and fill in the values

# Environment
NODE_ENV=staging
VERSION=staging

# Docker Registry
DOCKER_REGISTRY=ghcr.io/your-org

# Server Configuration
PORT=4000
CORS_ORIGIN=https://staging.auron.dev

# Database (PostgreSQL)
DATABASE_URL=postgresql://auron:password@postgres:5432/auron
POSTGRES_DB=auron
POSTGRES_USER=auron
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis
REDIS_URL=redis://:your-redis-password@redis:6379
REDIS_PASSWORD=your-secure-redis-password

# JWT Authentication
JWT_SECRET=your-jwt-secret-minimum-32-characters-long
JWT_REFRESH_SECRET=your-jwt-refresh-secret-minimum-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Lab Mode (docker or cloud)
LAB_MODE=docker

# Cloud Provider (Vultr)
VULTR_API_KEY=your-vultr-api-key
VULTR_REGION=ewr  # New York
VULTR_PLAN=vc2-1c-1gb

# AI Integration (LiquidMetal/Claude)
LIQUIDMETAL_API_KEY=your-liquidmetal-api-key
LIQUIDMETAL_MODEL=claude-3-sonnet-20240229

# Wazuh Security
WAZUH_PASSWORD=your-secure-wazuh-password
WAZUH_API_URL=http://wazuh:55000

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-password
PROMETHEUS_URL=http://prometheus:9090

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/auron/app.log

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@auron.dev

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=/opt/auron/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret-minimum-32-characters-long
SESSION_MAX_AGE=86400000  # 24 hours in ms

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_CLOUD_LABS=false
ENABLE_AI_HINTS=true
ENABLE_COLLABORATION=true
ENABLE_REPORTS=true

# External Services
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=staging

# Frontend
REACT_APP_API_URL=https://staging-api.auron.dev
REACT_APP_WS_URL=wss://staging-api.auron.dev
REACT_APP_ENVIRONMENT=staging
REACT_APP_ENABLE_ANALYTICS=false
